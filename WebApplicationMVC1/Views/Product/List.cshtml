@model IEnumerable<Product>;
@{
    ViewData["Title"] = "List";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Product List
        </div>
        <div class="card-body">
            @foreach (var item in Model)
            {
                <ul>
                    <li>@item.Id  -   @item.Name </li>
                </ul>
            }
        </div>
    </div>

</div>
