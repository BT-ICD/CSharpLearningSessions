@model Product
@{
    ViewData["Title"] = "View";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Product
        </div>
        <div class="card-body">
            @if (Model != null)
            {

                <p>Id: @Model.Id</p>
                <p>Name: @Model.Name</p>
                <p>Rate: @Model.Rate</p>
                <p>Category: @Model.Category</p>

            }
            else
            {
                <p>Not found ...</p>
            }
        </div>

            <div class="card-footer">
                @Html.ActionLink("Back", "Index","Product")
            </div>
        </div>
</div>

